{
	"hosting": {
		"public": "public",
		"ignore": [
			".htaccess"
		],
		"headers": [
			{
				"source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
				"headers": [
					{
						"key": "Access-Control-Allow-Origin",
						"value": "*"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=7200"
					}
				]
			}
		],
		"rewrites": [
			{
				"source": "/api/encode",
				"function": "encode"
			},
			{
				"source": "/api/decode",
				"function": "decode"
			},
			{
				"source": "/api/add-city",
				"function": "add_city"
			},
			{
				"source": "terms",
				"destination": "/terms_of_service.html"
			},
			{
				"source": "policy",
				"destination": "/privacy_policy.html"
			},
			{
				"source": "console",
				"destination": "/console.html"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"cleanUrls": true,
		"trailingSlash": false
	}
}
